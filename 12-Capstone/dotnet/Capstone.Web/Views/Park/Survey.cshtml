@model NewSurveyViewModel

@section Title {
    New Survey
}

<h2>Survey</h2>


<form asp-controller="Park" asp-action="Survey" method="post">
    <div>
        <label asp-for="NewSurvey.ParkCode"></label>
        <select asp-for="NewSurvey.ParkCode" asp-items="Model.Parks"></select>
    </div>
    <div>
        <label asp-for="NewSurvey.EmailAddress"></label>
        <input asp-for="NewSurvey.EmailAddress" placeholder=" john@smith.com">
    </div>
    <div>
        <label asp-for="NewSurvey.StateOfResidence"></label>
        <select asp-for="NewSurvey.StateOfResidence" asp-items="Model.States"></select>
    </div>
    <div>
        @foreach (var item in Model.ActivityLevels)
        {
            <input asp-for="NewSurvey.ActivityLevel" type="radio" value="@item.Value" /> @item.Value
        }
    </div>
    <input type="submit" />
</form>
